<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd

         http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <util:properties id="mqListenerUser" location="classpath:mq-listener.properties"/>
    <context:property-placeholder properties-ref="mqListenerUser"/>

    <!-- A JMS connection factory for ActiveMQ -->
    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
        <property name="useAsyncSend" value="true"/>
        <property name="userName" value="#{mqListenerUser['username']}"/>
        <property name="password" value="#{mqListenerUser['password']}"/>
    </bean>

    <bean id="jmsContainer"
          class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destination" ref="aQ"/>
        <property name="messageListener" ref="reportMessageListener"/>
    </bean>

    <bean id="aQ"
          class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="errabbit.report.>"/>
    </bean>
</beans>
